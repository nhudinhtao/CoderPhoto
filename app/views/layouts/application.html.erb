<!DOCTYPE html>
<html>
<head>
  <title>CoderPhoto</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://unpkg.com/masonry-layout@4.1/dist/masonry.pkgd.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-dark bg-faded bg-danger" style="border-radius: 0">
      <%= link_to "CoderPhoto", root_path, class: 'navbar-brand' %>
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to "Timeline", photos_path, class: 'nav-link' %>
        </li>
      </ul>
      <form class="form-inline pull-xs-right">
        <input class="form-control" type="text" placeholder="Search">
        <button class="btn btn-warning-outline" type="submit">Search</button>
      </form>
    </nav>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
